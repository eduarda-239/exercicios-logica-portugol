programa {
  funcao inicio() {
    inteiro numero, resultado

    escreva("Escolha um número: ")
    leia(numero)

    resultado = numero - 1

    escreva("Seu número é o " + numero + " e seu antecessor é o " + resultado )
    
  }
}

